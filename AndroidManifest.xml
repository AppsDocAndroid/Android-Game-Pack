            android:label="@string/welcome_activity_lbl"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".puzzle.jigsaw.JigsawActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".puzzle.jigsaw.ImageChooserActivity"
            android:label="@string/image_chooser_activity_lbl"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".puzzle.jigsaw.JigsawSettingActivity"
            android:label="@string/jigsaw_setting_activity_lbl"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".puzzle.jigsaw.ImageChooserActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity 
            android:name="com.google.ads.AdActivity"
